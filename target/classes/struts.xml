<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <package name="struts" extends="struts-default">
    	<!-- Page -->
    	<action name="page-home">
            <result type="redirect">index.jsp</result>
        </action>
        <action name="page-formValidation">
            <result type="redirect">/jsp/form_validation/FormValidation.jsp</result>
        </action>
        <action name="page-exceptionHandling">
            <result type="redirect">/jsp/exception_handling/ExceptionHandling.jsp</result>
        </action>
        <action name="page-employee">
            <result type="redirect">/jsp/employee/EmployeeSearch.jsp</result>
        </action>
        <action name="page-report">
            <result type="redirect">/jsp/report/Report.jsp</result>
        </action>
    </package>
    
    <include file="strutsconfig/common.xml"></include>
    <include file="strutsconfig/exception-handling.xml"></include>
	<include file="strutsconfig/form-validation.xml"></include>
	<include file="strutsconfig/report.xml"></include>
</struts>