<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="authentication" namespace="/" extends="page">
    
        <action name="signIn" class="action.authentication.AuthenAction" method="signIn">
            <result name="success">/jsp/user/dashboad.jsp</result>
            <result name="input">/jsp/security/login.jsp</result>
            <result name="error">/jsp/security/errorPage.jsp</result>
            <!-- <global-results>
            	<result name="success">/jsp/user/dashboad.jsp</result>
	            <result name="again">/jsp/security/login.jsp</result>
	            <result name="error">/jsp/security/errorPage.jsp</result>
            </global-results> -->
        </action>
        
        <action name="signOut" class="action.authentication.AuthenAction" method="signOut">
            <result name="success">/wellcome.jsp</result>
            <result name="error">/jsp/security/errorPage.jsp</result>
        </action>
        
        <action name="regis" class="action.register.RegisAction" method="regisUser">
            <result name="success">/jsp/user/dashboad.jsp</result>
            <result name="input">/jsp/security/register.jsp</result>
            <result name="error">/jsp/security/errorPage.jsp</result>
        </action>
        
    </package>
</struts>